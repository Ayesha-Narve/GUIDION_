<% layout("/layouts/boilerplate.ejs") %>

<link rel="stylesheet" href="/css/lec_signup.css">

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="registration-card shadow-lg rounded-4 overflow-hidden">
        <div class="registration-header text-white text-center p-4" style="background: linear-gradient(90deg, #2e4df7, #5b8dfb);">
            <i class="bi bi-book" style="font-size: 3rem;"></i>
            <h3 class="mt-2">Lecturer Registration</h3>
            <p>Join Guidion as an educator</p>
        </div>

    <div class="bg-white p-5">
        <form action="/lecturer/register" method="POST" class="needs-validation" novalidate>
            
            <div class="mb-3">
                <label for="fullname" class="form-label fw-semibold">Full Name *</label>
                <input type="text" name="fullname" id="fullname" class="form-control" placeholder="Dr. John Doe" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label fw-semibold">Email Address *</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="lecturer@university.edu" required>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="subject" class="form-label fw-semibold">Subject / Department *</label>
                    <input type="text" name="subject" id="subject" class="form-control" placeholder="Computer Science" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="qualification" class="form-label fw-semibold">Qualification *</label>
                    <input type="text" name="qualification" id="qualification" class="form-control" placeholder="e.g., Ph.D in AI, M.Sc in CS" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="availability" class="form-label fw-semibold">Preferred Availability *</label>
                <select name="availability" id="availability" class="form-select" required>
                    <option value="">Select Availability</option>
                    <option value="weekdays">Weekdays</option>
                    <option value="weekends">Weekends</option>
                    <option value="flexible">Flexible</option>
                </select>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="password" class="form-label fw-semibold">Password *</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Min 6 characters" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="confirmPassword" class="form-label fw-semibold">Confirm Password *</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Re-enter password" required>
                </div>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn text-white fw-bold py-2" style="background: linear-gradient(90deg, #2e4df7, #5b8dfb); border: none;">
                    Create Account
                </button>
            </div>

            <p class="text-center mt-3 mb-0">
                Already have an account? <a href="/llogin" class="text-decoration-none fw-semibold text-gradient">Sign in here</a>
            </p>
        </form>
    </div>
</div>

</div>

<script>
(() => {
  'use strict';

  // Fetch all forms needing validation
  const forms = document.querySelectorAll('.needs-validation');

  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {

      // Password confirmation check
      const password = form.querySelector('#password');
      const confirmPassword = form.querySelector('#confirmPassword');

      if (password && confirmPassword && password.value !== confirmPassword.value) {
        confirmPassword.setCustomValidity("Passwords do not match");
      } else {
        confirmPassword.setCustomValidity("");
      }

      // Bootstrap validation logic
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }

      form.classList.add('was-validated');
    }, false);
  });
})();
</script>

