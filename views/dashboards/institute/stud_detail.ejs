<% layout('/layouts/dashboard') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Guidion Dashboard</title>
  <link rel="stylesheet" href="/GUIDION_/public/css/sidebar.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>
<body>
  <div class="dashboard-container">
    <div class="sidebar-placeholder"></div>

    <div class="main-content">
      <div class="header-section">
        <h2>Monitor student progress and records</h2>
        <button class="add-btn">
          <i class="fa-solid fa-user-plus"></i> Enroll Student
        </button>
      </div>

      <div class="stats-grid">
        <a href="/students" class="card purple">
          <div class="icon"><i class="fa-solid fa-user-graduate"></i></div>
          <h3><%= totalStudents || '1,250' %></h3>
          <p>Total Students</p>
        </a>

        <a href="/attendance" class="card blue">
          <div class="icon"><i class="fa-solid fa-chart-line"></i></div>
          <h3><%= attendance || '89.5%' %></h3>
          <p>Attendance</p>
        </a>

        <a href="/rewards" class="card green">
          <div class="icon"><i class="fa-solid fa-award"></i></div>
          <h3><%= rewards || '9.23' %></h3>
          <p>Student Rewards</p>
        </a>

        <a href="/topicpoll" class="card yellow">
          <div class="icon"><i class="fa-solid fa-comments"></i></div>
          <h3><%= topicPolls || '30' %></h3>
          <p>Topic Polls</p>
        </a>
      </div>

      <div class="search-bar">
        <input type="text" placeholder="🔍 Search students...">
      </div>

      <div class="complaint-section">
        <h2>Student Complaints</h2>
        <table>
          <thead>
            <tr>
              <th>Complaint ID</th>
              <th>Complaint Details</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% if (complaints && complaints.length > 0) { %>
              <% complaints.forEach(complaint => { %>
                <tr>
                  <td><%= complaint.id %></td>
                  <td><%= complaint.details %></td>
                  <td><%= complaint.status %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="3">No complaints found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>

