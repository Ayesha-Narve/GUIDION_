<% layout("/layouts/dashboard.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Guidion Dashboard</title>
  <link rel="stylesheet" href="/css/institute/stud_detail.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>
<body>
  <div class="dashboard-container">
    

    <div class="main-content">
      <div class="header-section">
        <h2>Monitor student progress and records</h2>
        <button class="add-btn"><i class="fa-solid fa-user-plus"></i> Enroll Student</button>
      </div>

      <div class="stats-grid">
        <a href="/inst_students" class="card purple">
          <div class="icon"><i class="fa-solid fa-user-graduate"></i></div>
          <h3><%= typeof totalStudents !== 'undefined' ? totalStudents : '1,250' %></h3>
          <p>Total Students</p>
        </a>

        <a href="/stud_attendance" class="card blue">
          <div class="icon"><i class="fa-solid fa-chart-line"></i></div>
          <h3><%= typeof attendance !== 'undefined' ? attendance : '89.5%' %></h3>
          <p>Attendance</p>
        </a>

        <a href="/stud_rewards" class="card green">
          <div class="icon"><i class="fa-solid fa-award"></i></div>
          <h3><%= typeof rewards !== 'undefined' ? rewards : '9.23' %></h3>
          <p>Student Rewards</p>
        </a>

        <a href="/stud_topicpoll" class="card yellow">
          <div class="icon"><i class="fa-solid fa-comments"></i></div>
          <h3><%= typeof polls !== 'undefined' ? polls : '30' %></h3>
          <p>Polls</p>
        </a>
      </div>

      <div class="search-bar">
        <input type="text" placeholder="🔍 Search students...">
      </div>

      <div class="complaint-section">
        <h2>Student Complaints</h2>
        <table>
          <thead>
            <tr>
              <th>Complaint ID </th>
              <th>Complaint Details</th>
              <th>Attendance</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>#A45F7C</td>
              <td>Guest lecturer was not available on scheduled time.</td>
              <td>90 %</td>
            </tr>
            <tr>
              <td>#B87D2E</td>
              <td>Classroom projector not working properly.</td>
              <td>80%</td>
            </tr>
            <tr>
              <td>#B87AF3E</td>
              <td>Topic not understand.</td>
              <td>65%</td>
            </tr>
          </tbody>
        </table>
      </div>
    
  </div>
</body>
</html>
