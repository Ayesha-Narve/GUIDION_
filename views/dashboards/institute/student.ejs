<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Total Students - Guidion</title>
  <!-- Correct CSS path -->
  <link rel="stylesheet" href="/css/institute/stud_detail.css">
</head>
<body>
  <div class="page-container">
    <header>
      <h1>Category Wise Courses & Student Count</h1>
      <a href="/stud_detail" class="back-btn">Back</a>
    </header>

    <% 
      const courses = [
        { name: "BSc Computer Science", department: "Computer Science", students: 420 },
        { name: "BSc Cyber Security", department: "Cyber Security", students: 310 },
        { name: "BSc AI & ML", department: "Artificial Intelligence", students: 260 },
        { name: "BSc Data Science", department: "Data Science", students: 260 },
        { name: "MSc Computer Science", department: "Computer Science", students: 420 },
        { name: "MSc Cyber Security", department: "Cyber Security", students: 456 },
        { name: "MSc AI & ML", department: "Artificial Intelligence", students: 280 },
        { name: "MSc Data Science", department: "Data Science", students: 300 }
      ];
    %>

    <table>
      <thead>
        <tr>
          <th>Course</th>
          <th>Department</th>
          <th>Number of Students</th>
        </tr>
      </thead>
      <tbody>
        <% if (courses && courses.length > 0) { %>
          <% courses.forEach(course => { %>
            <tr>
              <td><%= course.name %></td>
              <td><%= course.department %></td>
              <td><%= course.students %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="3">No course data available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
