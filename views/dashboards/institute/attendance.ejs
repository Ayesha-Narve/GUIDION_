<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Average Attendance - Guidion</title>
  <!-- Correct CSS path -->
  <link rel="stylesheet" href="/css/institute/stud_detail.css">
</head>
<body>
  <div class="page-container">
    <header>
      <h1>Completed Lectures & Attendance Overview</h1>
      <!-- Fixed back link to go to the main dashboard route -->
      <a href="/stud_detail" class="back-btn"> Back </a>
    </header>

    <% 
      const lectures = [
        { topic: "Introduction to Python", date: "10 Oct 2025", totalStudents: 120, attended: 110, attendancePercent: "91.6%" },
        { topic: "Data Structures", date: "14 Oct 2025", totalStudents: 130, attended: 118, attendancePercent: "90.7%" },
        { topic: "Web Development Basics", date: "20 Oct 2025", totalStudents: 115, attended: 109, attendancePercent: "94.7%" }
      ];
    %>

    <table>
      <thead>
        <tr>
          <th>Lecture Topic</th>
          <th>Date</th>
          <th>Total Students</th>
          <th>Attended</th>
          <th>Attendance %</th>
        </tr>
      </thead>
      <tbody>
        <% if (lectures && lectures.length > 0) { %>
          <% lectures.forEach(lecture => { %>
            <tr>
              <td><%= lecture.topic %></td>
              <td><%= lecture.date %></td>
              <td><%= lecture.totalStudents %></td>
              <td><%= lecture.attended %></td>
              <td><%= lecture.attendancePercent %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5">No lecture records available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
