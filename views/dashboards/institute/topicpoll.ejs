<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Topic Polls - Guidion</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>
<body>
  <div class="page-container">
    <header>
      <h1><i class="fa-solid fa-comments"></i> Topic Polls</h1>
      <a href="/GUIDION_/views/dashboards/institute/stud_detail.ejs" class="back-btn"><i class="fa-solid fa-arrow-left"></i> Back</a>
    </header>

    <section class="polls">
      <h2>Select the Topics Youâ€™re Interested In</h2>

      <form id="topicForm">
        <div class="checkbox-group">
          <% if (topics && topics.length > 0) { %>
            <% topics.forEach(topic => { %>
              <label>
                <input type="checkbox" name="topic" value="<%= topic %>"> <%= topic %>
              </label>
            <% }) %>
          <% } else { %>
            <p>No topics available.</p>
          <% } %>
        </div>

        <h3>Other (Add Your Own Topic)</h3>
        <br>
        <div class="add-topic">
          <input type="text" id="customTopic" placeholder="Type your topic here...">
          <button type="button" id="addTopicBtn">
            <i class="fa-solid fa-plus"></i> Add
          </button>
        </div>

        <div id="customTopicList"></div>

        <button type="submit" class="submit-btn">Submit Topics</button>
      </form>
    </section>
  </div>

  <script>
    const addBtn = document.getElementById("addTopicBtn");
    const topicList = document.getElementById("customTopicList");
    const input = document.getElementById("customTopic");

    addBtn.addEventListener("click", () => {
      const topic = input.value.trim();
      if (topic) {
        const label = document.createElement("label");
        label.innerHTML = `<input type="checkbox" name="topic" value="${topic}"> ${topic}`;
        topicList.appendChild(label);
        input.value = "";
      }
    });

    document.getElementById("topicForm").addEventListener("submit", (e) => {
      e.preventDefault();
      const selected = Array.from(document.querySelectorAll('input[name="topic"]:checked')).map(t => t.value);
      if (selected.length > 0) {
        alert("You selected: " + selected.join(", "));
      } else {
        alert("Please select at least one topic.");
      }
    });
  </script>
</body>
</html>
